extends layout

block content
  div(class="main-content")
    div(class="site-wrapper")
      div(class="site-wrapper-inner")
        div(class="cover-container")
          div(class="masthead clearfix")
            div(class="inner")
              h3(class="masthead-brand")=title
              ul(class="nav masthead-nav")
                li(class="active")
                  a(href="#") Home
          div(class="inner cover")
            h1(class="cover-heading") Welcome to #{subtitle}
            p(class="lead") The on/off switch controls the motion system
            p(class="lead")
              div(class="container-fluid")
                if lastsysstatus === 'n'
                  p(id="systemstatus") Last recorded status of system was: on
                else
                  p(id="systemstatus") Last recorded status of system was: off
                button(type="button", class="btn btn-primary btn-lg", id="sysOn")
                  span(class="glyphicon glyphicon-ok")
                button(type="button", class="btn btn-primary btn-lg", id="sysOff")
                  span(class="glyphicon glyphicon-remove")
          div(class="mastfoot")
            div(class="inner")
              p Cover template provided by
                a(href="http://getbootstrap.com") Bootstrap
    script(src="/javascripts/jquery-1.11.0.min.js")
    script(src="/javascripts/bootstrap.js")
    script(src="/javascripts/docs.min.js")
    script(src="/javascripts/ihome.js")